{{!-- JL --}}
<h1>Welcome {{currentUser.name}}</h1>
<p>Help all the begginers to have the salaries overview, <b>the form is TOTALLY ANONYMOUS</b></p>
{{#if errorMessage}}
<p class='error'>{{errorMessage}}</p>
{{/if}}
<div class="profileContainer">

    <form action='/profile' id="createForm" method='post'>
        <div>
            <label for='company'>Company : </label>
            <input list="companyCreated" required id="company" name='company' placeholder='Company' />
            <datalist id="companyCreated">
                {{#each allCompanies}}
                <option value="{{name}}">
                    {{/each}}
            </datalist>

        </div>
        <div>
            <label for='title'>Job title : </label>
            <input type='text' required id='title' name='title' placeholder='Title' />
        </div>
        <div>
            <label for='location'>Location : </label>
            <input type='text' id="location" required name='location' placeholder='Location' />
        </div>
        <div>
            <label for='compensation'>Compensation : </label>
            <input type='text' id="compensation" required name='compensation' placeholder='compensation' />
        </div>
        <div>
            <label for='level'>Level : </label>
            <select name="level" id="level" required>
                <option value="Junior">Junior</option>
                <option value="Intermediate">intermediate</option>
                <option value="Senior">senior</option>
            </select>
        </div>
        <div>
            <label for='company_xp'>Number company exp : </label>
            <input type='text' id="companyXp" required name='company_xp'
                placeholder='number of your experience in this company' />
        </div>
        <div>
            <label for='company_note'>Note : </label>
            <select name="company_note" id="note" required>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>

        </div>
        <div>
            <label for='total_xp'> Number field exp : </label>
            <input type='text' id="totalXp" required name='total_xp'
                placeholder='number of your experience in this field' />
        </div>
        <div>
            <label for='company_review'> Comment : </label>
            <input type='text' required id="companyReview" name='company_review' placeholder='Comment' />
        </div>

        <button id="createBtn" type="submit">Create your review</button>

    </form>


    <div class="userContainer">
        <div class="user-info">
            <div class="userCompany"></div>
            <div class="userLocation"></div>
            <div class="userJob"></div>
            <div class="userCompensation"></div>
            <div class="userLevel"></div>
            <div class="userNote"> </div>
            <div class="userXp"></div>
            <div class="jobXp"></div>
            <div class="userComment"></div>
        </div>
    </div>

    <template id="template">
        <div class="user-info">
            <div class="userCompany">Company: <span></span></div>
            <div class="userLocation">Location: <span></span></div>
            <div class="userJob">Job title: <span></span></div>
            <div class="userCompensation">Compensation: <span></span></div>
            <div class="userLevel">Number company exp: <span></span></div>
            <div class="userNote">Note: <span></span></div>
            <div class="userXp">Number field exp: <span></span></div>
            <div class="jobXp">Number current job exp: <span></span></div>
            <div class="userComment">Comment:<span></span></div>
        </div>
    </template>

</div>