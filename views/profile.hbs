    <div class="userContainer">
        <div class="user-info">
            <div class="userCompany"></div>
            <div class="userLocation"></div>
            <div class="userJob"></div>
            <div class="userCompensation"></div>
            <div class="userLevel"></div>
            <div class="userNote"> </div>
            <div class="userXp"></div>
            <div class="jobXp"></div>
            <div class="userComment"></div>
         
        </div>
