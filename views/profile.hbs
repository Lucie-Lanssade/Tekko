<div class="titleProfile">
  <h1>Welcome {{currentUser.name}}</h1>  
</div>

<div class="textProfile">
    <p>"Remember, filling out <b>an anonymous salary form</b> is not only a confidential way to contribute to your community, but also
a small act of solidarity towards a more transparent and equitable society where everyone's contributions are recognized
and valued."</p>
</div>

{{#if errorMessage}}
<p class='error'>{{errorMessage}}</p>
{{/if}}
<div class="profileContainer">
    
    <div class="formContainer">
       
        <div class="form-create">
            <h2>Create review</h2>
            <form  id="createForm">
            <div>
                <label for='company'>Your Company : </label>
                <input list="companyCreated" required id="company" name='company' placeholder='Company' />
                <datalist id="companyCreated">
                    {{#each allCompanies}}
                    <option value="{{name}}">
                        {{/each}}
                </datalist>

            </div>
            <div>
                <label for='title'>Job title : </label>
                <input type='text' required id='title' name='title' placeholder='Job Title' />
            </div>
            <div>
                <label for='location'>Location : </label>
                <input type='text' id="location" required name='location' placeholder='Location' />
            </div>
            <div>
                <label for='compensation'>Compensation : </label>
                <input type='text' id="compensation" required name='compensation' placeholder='compensation' />
            </div>
            <div>
                <label for='level'>Level : </label>
                <select name="level" id="level" required>
                    <option value="Junior">Junior</option>
                    <option value="Intermediate">intermediate</option>
                    <option value="Senior">senior</option>
                </select>
            </div>
            <div>
                <label for='company_xp'>Company experience: </label>
                <input type='text' id="companyXp" required name='company_xp'
                    placeholder='Year(s)' />
            </div>
            <div>
                <label for='company_note'>Note of your company : </label>
                <select name="company_note" id="note" required>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>

            </div>
            <div>
                <label for='total_xp'> Number field exp : </label>
                <input type='text' id="totalXp" required name='total_xp'
                    placeholder='number of your experience in this field' />
            </div>
            <div>
                <label for='company_review'> Comment : </label>
                <input type='text' required id="companyReview" name='company_review' placeholder='Comment' />
            </div>

            <button id="createBtn" type="submit">Create review</button>

        </form>
        </div>
    

